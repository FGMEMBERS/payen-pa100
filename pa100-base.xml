<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

   <author>BARANGER Emmanuel (3D/FDM)</author>
   <aircraft-version>0.2</aircraft-version>
   <status>0.1 Alpha</status>

   <fuel-fraction>0.8</fuel-fraction>

   <startup>
     <splash-texture>Aircraft/payen-pa100/pa100-splash.png</splash-texture>
   </startup>

   <sound>
     <path>Aircraft/payen-pa100/Sounds/pa100-sound.xml</path>
   </sound>

   <model>
     <path archive="y">Aircraft/payen-pa100/Models/pa100.xml</path>
     <livery>
       <file type="string">default</file>
     </livery>
   </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
      </generic>
    </multiplay>

    <help>
      <title>Payen Pa 100</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <menubar include="Dialogs/pa100-menu.xml"/>

  </sim>

  <yasim>
    <pa100>
      <pilot-lb>180</pilot-lb>
    </pa100>
  </yasim>

  <engines>
    <engine>
      <rpm type="double">700</rpm>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/pa100-keyboard.xml"/>
  </input>
 
  <nasal>
    <pa100>
      <file>Aircraft/payen-pa100/Nasal/doors.nas</file>
      <file>Aircraft/payen-pa100/Nasal/liveries.nas</file>
    </pa100>
  </nasal>

</PropertyList>
