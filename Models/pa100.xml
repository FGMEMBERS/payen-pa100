<?xml version="1.0"?>

<PropertyList>

 <path>pa100.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/payen-pa100/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

 <animation>
   <!-- Objets opaques -->
   <object-name>fuselage</object-name>
   <object-name>aile</object-name>
   <object-name>petiteaile</object-name>
   <object-name>aileronG</object-name>
   <object-name>aileronD</object-name>
   <object-name>profondeur</object-name>
   <object-name>direction</object-name>
   <object-name>roueA</object-name>
   <object-name>roueG</object-name>
   <object-name>roueD</object-name>
   <object-name>bol</object-name>
   <object-name>helice</object-name>
   <object-name>trainA</object-name>
   <object-name>trainG</object-name>
   <object-name>trainD</object-name>
   <object-name>cacheA</object-name>
   <object-name>tourvitre</object-name>
   <object-name>tourverriere</object-name>
   <object-name>echapp</object-name>

   <!-- Objets transparents -->
   <object-name>vitre</object-name>
   <object-name>verriere</object-name>
   <object-name>propdisc</object-name>
   <object-name>propblur</object-name>
 </animation>

 <animation>
   <type>noshadow</type>
   <object-name>vitre</object-name>
   <object-name>verriere</object-name>
   <object-name>propdisc</object-name>
   <object-name>propblur</object-name>
 </animation>

  <animation>
    <type>material</type>
   <object-name>fuselage</object-name>
   <object-name>aile</object-name>
   <object-name>petiteaile</object-name>
   <object-name>aileronG</object-name>
   <object-name>aileronD</object-name>
   <object-name>profondeur</object-name>
   <object-name>direction</object-name>
   <object-name>roueA</object-name>
   <object-name>roueG</object-name>
   <object-name>roueD</object-name>
   <object-name>bol</object-name>
   <object-name>helice</object-name>
   <object-name>trainA</object-name>
   <object-name>trainG</object-name>
   <object-name>trainD</object-name>
   <object-name>cacheA</object-name>
   <object-name>tourvitre</object-name>
   <object-name>tourverriere</object-name>
   <object-name>echapp</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
  </animation>

  <!-- Interieur -->
  <model>
    <path>Aircraft/payen-pa100/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </offsets>
  </model>

  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>/engines/engine[0]/rpm</property>
    <factor> 0.5 </factor>
    <center>
      <x-m> -3.046 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.267 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

 <!-- Gouverne de profondeur -->
 <animation>
  <type>rotate</type>
  <object-name>profondeur</object-name>
  <property>/controls/flight/elevator</property>
  <factor>-15</factor>
  <center>
    <x-m> -1.158 </x-m>
    <y-m>  0.000 </y-m>
    <z-m>  0.040 </z-m>
  </center>
  <axis>
    <x>  0.000 </x>
    <y>  1.000 </y>
    <z>  0.000 </z>
  </axis>
 </animation>

 <!-- Gouverne de direction -->
 <animation>
  <type>rotate</type>
  <object-name>direction</object-name>
  <property>/controls/flight/rudder</property>
  <factor>20</factor>
  <axis>
   <x1-m>  2.812 </x1-m>
   <y1-m>  0.000 </y1-m>
   <z1-m>  0.181 </z1-m>
   <x2-m>  2.541 </x2-m>
   <y2-m>  0.000 </y2-m>
   <z2-m>  1.298 </z2-m>
  </axis>
 </animation>

 <!-- Animations des ailerons -->
 <animation>
  <type>rotate</type>
  <object-name>aileronG</object-name>
  <property>/surface-positions/left-aileron-pos-norm</property>
  <factor>15.0</factor>
  <center>
    <x-m>  2.411 </x-m>
    <y-m> -1.068 </y-m>
    <z-m>  0.064 </z-m>
  </center>
  <axis>
    <x>  0.000 </x>
    <y>  1.000 </y>
    <z>  0.000 </z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>aileronD</object-name>
  <property>/surface-positions/right-aileron-pos-norm</property>
  <factor>15.0</factor>
  <center>
    <x-m>  2.411 </x-m>
    <y-m>  1.068 </y-m>
    <z-m>  0.064 </z-m>
  </center>
  <axis>
    <x>  0.000 </x>
    <y>  1.000 </y>
    <z>  0.000 </z>
  </axis>
 </animation>

<!-- Rentré du train avant -->
 <animation>
  <type>rotate</type>
  <object-name>roueA</object-name>
  <object-name>trainA</object-name>
  <object-name>cacheA</object-name>
  <property>/gear/gear[0]/position-norm</property>
  <factor>73.195</factor>
  <center>
    <x-m> -1.336 </x-m>
    <y-m>  0.000 </y-m>
    <z-m> -0.372 </z-m>
  </center>
  <axis>
    <x>  0.000 </x>
    <y>  1.000 </y>
    <z>  0.000 </z>
  </axis>
 </animation>

 <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
 <animation>
  <type>rotate</type>
  <object-name>roueA</object-name>
  <property>/controls/flight/rudder</property>
  <factor> 10.0 </factor>
  <center>
   <x-m> -0.580 </x-m>
   <y-m>  0.000 </y-m>
   <z-m> -0.201 </z-m>
  </center>
  <axis>
    <x>  1.000 </x>
    <y>  0.000 </y>
    <z>  0.000 </z>
  </axis>
 </animation>

 <!-- Rotation des roues lors du roulage -->
 <animation>
   <type>spin</type>
   <object-name>roueA</object-name>
   <property>/gear/gear[0]/rollspeed-ms</property>
   <factor> 30 </factor>
   <center>
     <x-m> -0.580 </x-m>
     <y-m>  0.000 </y-m>
     <z-m> -0.201 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y> -1.000 </y>
     <z>  0.000 </z>
   </axis>
 </animation>

 <animation>
   <type>spin</type>
   <object-name>roueG</object-name>
   <property>/gear/gear[1]/rollspeed-ms</property>
   <factor> 30 </factor>
   <center>
     <x-m>  2.122 </x-m>
     <y-m> -1.526 </y-m>
     <z-m> -0.491 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y> -1.000 </y>
     <z>  0.000 </z>
   </axis>
 </animation>

 <animation>
   <type>spin</type>
   <object-name>roueD</object-name>
   <property>/gear/gear[1]/rollspeed-ms</property>
   <factor> 30 </factor>
   <center>
     <x-m>  2.122 </x-m>
     <y-m>  1.526 </y-m>
     <z-m> -0.491 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y> -1.000 </y>
     <z>  0.000 </z>
   </axis>
 </animation>


<!-- Canopy -->
 <animation>
   <type>rotate</type>
   <object-name>verriere</object-name>
   <object-name>tourverriere</object-name>
   <property>/instrumentation/doors/crew/position-norm</property>
   <interpolation>
     <entry>
       <ind> 0.00 </ind>
       <dep> 0.00 </dep>
     </entry>
     <entry>
       <ind>  0.25 </ind>
       <dep> 10.00 </dep>
     </entry>
     <entry>
       <ind>  0.50 </ind>
       <dep> 20.00 </dep>
     </entry>
     <entry>
       <ind>  0.75 </ind>
       <dep> 45.00 </dep>
     </entry>
     <entry>
       <ind>  1.00 </ind>
       <dep> 90.00 </dep>
     </entry>
   </interpolation>
   <axis>
     <x1-m>  1.210 </x1-m>
     <y1-m>  0.265 </y1-m>
     <z1-m>  0.427 </z1-m>
     <x2-m>  0.813 </x2-m>
     <y2-m>  0.277 </y2-m>
     <z2-m>  0.427 </z2-m>
   </axis>
 </animation>

</PropertyList>

